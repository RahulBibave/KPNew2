<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        android:id="@+id/rootLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F4F4F4"

        tools:context=".ProjectLandingActivity">

<RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/lin_tital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:padding="5dp"
                android:scaleType="center"
                android:id="@+id/icon"
                android:src="@drawable/kp_new"/>
        <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Megapolis : 150 "
                    android:textSize="20sp"

                    android:gravity="bottom"
                    android:id="@+id/pro_name"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Magarpatta, Keshav Nagar, Pune"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    android:textSize="16sp"
                    android:id="@+id/pro_loc"
                    android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/social"
            android:layout_below="@+id/lin_tital"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingTop="10dp"
            android:visibility="visible"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/fb"
                android:src="@mipmap/fb"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/tw"
                android:src="@mipmap/tw"/>
        <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/whatsapp"
                android:src="@mipmap/whatsapp"/>
        <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/youtube"
                android:src="@mipmap/yt"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/instagram"
                android:src="@mipmap/ic_insta"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/sms"
                android:src="@mipmap/sms"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/call"
                android:src="@mipmap/viber"/>
    </LinearLayout>
    <TextView

            android:id="@+id/txtViewTital"
            android:layout_below="@+id/social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Photos"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/txtViewTital"
            android:id="@+id/recyclergallary"
            android:layout_width="match_parent"
            android:layout_height="140dp">

    </android.support.v7.widget.RecyclerView>

<android.support.v7.widget.CardView
        android:elevation="5dp"
        app:cardCornerRadius="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/recyclergallary"
        android:id="@+id/cardCate"
        android:background="#f4df6363"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <LinearLayout
            android:layout_margin="2dp"
            android:layout_below="@+id/recyclergallary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/category"/>
        <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:id="@+id/cat_title"
                    android:textColor="#000000"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/cat_titdesc"
                    android:textColor="#000000"
                    android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>







</android.support.v7.widget.CardView>


<android.support.v7.widget.CardView
        android:elevation="5dp"
        app:cardCornerRadius="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            android:layout_below="@+id/cardCate"
            android:id="@+id/cardFlat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        <LinearLayout

                android:layout_below="@+id/recyclergallary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/flat"/>
            <LinearLayout
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flat Type"

                        android:textColor="#000000"
                        />
                <TextView
                        android:id="@+id/txtFlatType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 BHK "
                        android:textColor="#000000"
                        android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>







    </android.support.v7.widget.CardView>



<android.support.v7.widget.CardView
        android:elevation="5dp"
        app:cardCornerRadius="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/cardFlat"
            android:id="@+id/cardArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




    <LinearLayout

            android:layout_below="@+id/recyclergallary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal">
        <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/area"/>
        <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usable Area"

                    android:textColor="#000000"
                   />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 BHk-73.35 sq mt to 75.50 sq mt"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="18dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 BHk-73.35 sq mt to 75.50 sq mt"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>







    </android.support.v7.widget.CardView>


<android.support.v7.widget.CardView
            android:elevation="5dp"
            app:cardCornerRadius="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/cardArea"
            android:id="@+id/cardPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        <LinearLayout

                android:layout_below="@+id/recyclergallary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rate"/>
            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starting From"
                        android:textColor="#000000"
                       />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 BHk - 73.35 Lac(s)+Taxes"

                        android:textColor="#000000"
                        android:textSize="18dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 BHk - 95.44 Lac(s)+Taxes"

                        android:textColor="#000000"
                        android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>







    </android.support.v7.widget.CardView>





    <LinearLayout

           android:layout_below="@+id/cardPrice"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/about"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/abtimage"
                        android:src="@drawable/about_project"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="About Project"
                        android:clickable="false"
                        android:paddingTop="5dp"

                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:id="@+id/abttext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/amenities"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:id="@+id/amenitimage"
                        android:src="@drawable/amenities"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Amenities"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:id="@+id/amenitytext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/gallery"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:id="@+id/photo"
                        android:src="@drawable/gallery"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Photo Gallery"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/gallerytext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/floorplan"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:id="@+id/floor"
                        android:src="@drawable/floor_plan"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Floor Plan"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/floorplantext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:visibility="gone"
                          android:layout_weight="1"
                          android:id="@+id/virtualtour"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/visual"
                        android:src="@drawable/visualtour"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Virtual Tour"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/visualtourtext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:visibility="gone"
                          android:id="@+id/rera"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/reraimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/rera_new" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ReRa"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/reratext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/locationmap"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:id="@+id/locationmapimage"
                        android:src="@drawable/location"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Location Map"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:id="@+id/locationmaptext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/liveview"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:focusable="false"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:id="@+id/liveviewimage"
                        android:src="@drawable/live_cam"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Live View"
                        android:paddingTop="5dp"
                        android:focusable="false"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:id="@+id/liveviewtext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/enquiry"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:id="@+id/enquiryimage"
                        android:src="@drawable/enquiry"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Enquiry"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:id="@+id/enquirytext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/website"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:id="@+id/web"
                        android:src="@drawable/website"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Website"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/websitettext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:id="@+id/contactus"
                          android:onClick="buDetails"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:id="@+id/amenitiesimage"
                        android:src="@drawable/contact"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Contact Us"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/contactustext"
                        android:textSize="16sp"
                        android:textColor="#000000" />
            </LinearLayout>





        </LinearLayout>


    </LinearLayout>




</RelativeLayout>
</ScrollView>