<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/ssssss"
>

    
    <RelativeLayout
            android:id="@+id/relMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/proimage"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:transitionName="profile"
                    android:id="@+id/projectImage"
                    android:scaleType="fitXY"
                    android:src="@drawable/demooo"
            />
            <ProgressBar
                    android:id="@+id/loadings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"

            />
        </FrameLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#70000000"
                android:layout_alignBottom="@+id/proimage">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MegaPolis"
                    android:transitionName="profile"
                    android:id="@+id/projectname"
                    android:singleLine="true"
                    android:paddingLeft="15dp"
                    android:textColor="#ffffff"
                    android:textSize="22sp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hinjewadi,Pune"
                        android:textColor="#ffffff"
                        android:layout_weight="0.8"
                        android:ellipsize="end"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:id="@+id/projectlocation"
                        android:textSize="18sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/details"
                        android:layout_weight="1.2"
                        android:text="Details"
                        android:visibility="gone"
                        android:gravity="right|center_vertical"
                        android:paddingBottom="5dp"
                        android:drawablePadding="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>