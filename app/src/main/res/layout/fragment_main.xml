<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:id="@+id/lin_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="3">

            <!-- <Button
                    android:id="@+id/bucity_pune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PUNE "
                    android:background="@drawable/city_oval_selected"
                    android:layout_marginRight="10dp"

            />-->

            <RelativeLayout
                    android:id="@+id/bucity_pune"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                   android:paddingLeft="5dp"
                   android:gravity="center"
                    android:paddingRight="5dp"
                    android:background="@drawable/city_oval_selected">

                <TextView
                        android:id="@+id/txtPune"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:layout_toLeftOf="@+id/img"
                        android:layout_marginLeft="3dp"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pune"
                />

                <ImageView
                        android:id="@+id/img"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="13dp"
                           android:layout_height="18dp"
                        android:src="@drawable/small_dropdown"
                />



            </RelativeLayout>

           <!-- <Button
                    android:id="@+id/bucity_mumbai"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mumbai"
                    android:drawableRight="@drawable/small_dropdown"
                    android:background="@drawable/city_oval"

            />-->

            <RelativeLayout
                    android:id="@+id/bucity_mumbai"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/city_oval">

                <TextView
                        android:id="@+id/txtMumbai"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:layout_toLeftOf="@+id/img2"
                        android:layout_marginLeft="3dp"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mumbai"
                />

                <ImageView
                        android:id="@+id/img2"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="13dp"
                        android:layout_height="18dp"
                        android:src="@drawable/small_dropdown"
                />



            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/bucity_bangalore"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/city_oval">

                <TextView
                        android:id="@+id/txtbangalore"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:layout_toLeftOf="@+id/img3"
                        android:layout_marginLeft="3dp"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bengaluru"
                />

                <ImageView
                        android:id="@+id/img3"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="13dp"
                        android:layout_height="18dp"
                        android:src="@drawable/small_dropdown"
                />



            </RelativeLayout>

           <!-- <Button
                    android:id="@+id/bucity_bangalore"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="bangalore"
                    android:background="@drawable/city_oval"


            />-->

        </LinearLayout>


        <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
        >

            <android.support.v7.widget.RecyclerView

                    android:id="@+id/recyclerCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyler_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

    </android.support.v7.widget.RecyclerView>


</LinearLayout>